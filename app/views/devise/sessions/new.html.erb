<div class="modal show">
  <div class="modal-dialog modal-content">
    <div class="modal-header">
      <h2>Вход на сайт</h2>

    </div>

    <div class="modal-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form col-md-12 center-block'}) do |f| %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: 'Электропочта', class: 'form-control input-lg' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: 'Пароль', class: 'form-control input-lg' %>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label 'Запомнить меня?' %>
              </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Войти", class: 'btn btn-success pull-right' %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
